msgstr "Вид отметки"

msgid "Orange circle"
msgstr "Оранжевый круг"

msgid "\"New\" text"
msgstr "Текст \"New\""

msgid "Flag"
msgstr "Флаг"

msgid "Picture (default)"
msgstr "Картинка (по умолчанию)"

msgid "Picture (custom)"
msgstr "Картинка (особая)"

msgid "None"
msgstr "Не отображается"

